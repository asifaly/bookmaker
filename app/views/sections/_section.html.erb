<% unless section.new_record? %>
  <div id="<%= dom_id section %>" class="section clearfix" data-section-id="<%= section.id %>">
    <%= fa_icon 'bars', class: 'forsection' %>
    <%= link_to section.title, book_chapter_section_path(section.chapter.book, section.chapter, section), class: "section-title", remote: true %>
  </div>
<% end %>
